<Configuration status="WARN">
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p %C{1} %m%n"/>
      <ThresholdFilter level="DEBUG"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger level="DEBUG" name="io.clouditor"/>
    <Root level="INFO">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>
